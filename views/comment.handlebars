<h1>Write a Review</h1>

<h1>{{Restaurant_Title}}</h1>

{{#if user}}
    <form action="message" method="POST">
        <input autofocus type="text" name="message" id="message-input" placeholder="write a review">
        <button>submit</button>
    </form>
{{else}}
    <a href="login">login</a>
    <a href="register">Register</a>
{{/if}}
<ul>
  {{#each messages}}
    <li>{{this.authorId}}: {{this.message}}</li>
  {{/each}}
</ul>
