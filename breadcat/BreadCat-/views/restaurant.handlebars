<h1>Viewing Restaurant Info:</h1>
<h3>{{this.restaurantName}}</h3>
<p>{{this.restaurantDesc}}</p>
<div class="restImg">
    <img src="{{this.restaurantImg}}" alt="{{this.restaurantName}}" widht="500" height="250">
</div>
<p><a href="{{this.restaurantLink}}" target="_blank">{{this.restaurantAdd}}</a></p>
<p>{{this.restaurantDelivery}}</p>
<p>{{this.restaurantPrice}}</p>
<p id="rating">Rating: {{this.averageRating}}</p>
<p>Number of Reviews: {{this.totalRatings}}</p>
<b>Dietary Restriction Accommodations:</b><br>
<ul id="accomodations">
    {{#if glutenFree}}<li><p>{{this.glutenFree}}
    <ul>
        <li>{{this.glutenPercent}}</li>
        <li>{{this.glutenSub}}</li>
    </ul></p>
    </li>{{/if}}
    {{#if vegetarian}}<li><p>{{this.vegetarian}}
    <ul>
        <li>{{this.vegetarianPercent}}</li>
        <li>{{this.vegetarianSub}}</li>
    </ul></p>
    </li>{{/if}}
    {{#if vegan}}<li><p>{{this.vegan}}
    <ul>
        <li>{{this.veganPercent}}</li>
        <li>{{this.veganSub}}</li>
    </ul></p>
    </li>{{/if}}
    {{#if lowCalorie}}<li><p>{{this.lowCalorie}}
    <ul>
        <li>{{this.lowCalPercent}}</li>
        <li>{{this.lowCalSub}}</li>
    </ul></p>
    </li>{{/if}}
    {{#if kosher}}<li><p>{{this.kosher}}
    <ul>
        <li>{{this.kosherPercent}}</li>
        <li>{{this.kosherSub}}</li>
    </ul></p>
    </li>{{/if}}
    {{#if none}}<li><p>{{this.none}}</p></li>{{/if}}
</ul>

<a href="/results"><-- Back to Search</a><br>
<a href="/">Home</a>
{{#if user}}
	<a href="/logout">Logout</a>
    <form action={{restaurantID}} method="POST">
        <button>Write a Review</button>
    </form>
    <!--<a href="comment">Been to Here? Write a Review!</a>-->
{{else}}
	<a href="/login">Login</a>
	<a href="/register">Register</a>
{{/if}}
<h2>Reviews</h2>
<div>
    <ul>
        {{#each messages}}
            <li><p class="name"><b>{{this.authorName}}</b></p><p>{{this.message}}</p><p>{{this.rating}}/5</p></li>
        {{/each}}
    </ul>
</div>